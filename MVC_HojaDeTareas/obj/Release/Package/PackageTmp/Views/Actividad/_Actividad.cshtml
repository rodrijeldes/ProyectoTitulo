@model MVC_HojaDeTareas.Models.Actividad._ActividadModel
@{Layout = null; }

<div class="row">
    <div class="col-md-2">
        <a onclick="MostrarAgregarActividad()"><i class="fa fa-book"></i> Nuevo Actividad</a>
    </div>
    <div class="col-md-1">
        <span class="fa fa-search" onclick=""> Filtrar</span>
    </div>
</div>
@using (Html.BeginForm("Actividad", "Actividad"))
{
    @Html.HiddenFor(m => m.idProyecto)
    <div class="panel panel-default" id="dvPanelCrear">
        <div class="panel-body">
            <div class="row">
               
                <div class="col-md-2">
                    @Html.Label("Nombre", new { @class = "form-Label" })
                    @Html.TextBoxFor(m => m.nombreActividad, new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                    @Html.Label("Descripción", new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.descripcion, new { @class = "form-control" })
                </div>



                <div class="form-group col-md-2">
                    @Html.Label("Fecha Inicio", new { @class = "control-label" })
                    <div class='input-group date' id='dvTerminoPlaneado'>
                        @Html.TextBoxFor(m => m.fechaInicio, new { placeholder = "dd/mm/aaaa", @class = "form-control " })
                        <span class="input-group-addon btn">
                            <span class="fa fa-calendar open-datetimepicker">
                            </span>
                        </span>
                    </div>
                </div>

                <div class="form-group col-md-2 ">
                    @Html.Label("Fecha Término", new { @class = "control-label" })
                    <div class='input-group date' id='dvTerminoPlaneado'>
                        @Html.TextBoxFor(m => m.fechaTermino, new { placeholder = "dd/mm/aaaa", @class = "form-control " })
                        <span class="input-group-addon btn">
                            <span class="fa fa-calendar open-datetimepicker">
                            </span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row pull-right">
                <div class="col-md-2"><button type="submit" class="btn btn-primary"> <i class="fa fa-save"></i> Crear </button></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" id="dvActividadesa">
            @Html.Action("_ListaActividades", "Actividad", Model.idProyecto)

        </div>
    </div>
}


    <script type="text/javascript">
                
        $(function () {
            $('#dvPanelCrear').hide();
        });
           
    </script>


